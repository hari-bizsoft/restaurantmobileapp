<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/card_background_selector"
    android:backgroundTint="#b7f5f5f5"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"

        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintHorizontal_bias="0.0" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/res_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="37dp"
        android:background="#a3000000"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image"
        android:layout_marginTop="-5dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"


        android:text="TextView"
        android:textColor="@android:color/background_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"

        android:backgroundTint="@color/colorAccent"
        app:layout_constraintRight_toLeftOf="@+id/location"
        app:layout_constraintTop_toTopOf="@+id/location"
        app:srcCompat="@drawable/ic_place_black_24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        app:srcCompat="@drawable/ic_my_location_black_24dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="0.0 Km"
        android:gravity="center"
        android:textColor="#000"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="-49dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_round_bg"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/res_name"
        app:layout_constraintRight_toLeftOf="@+id/res_name"
        app:layout_constraintTop_toTopOf="@+id/res_name"
        app:layout_constraintVertical_bias="0.352"
        app:srcCompat="@drawable/ic_restaurant_black_24dp" />

    <ImageView
        android:id="@+id/preOrder"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/delivery"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/dinein"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/dining"
        app:layout_constraintRight_toLeftOf="@+id/preOrder"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/preOrder"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/delivery"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/dinein"
        app:layout_constraintTop_toTopOf="@+id/dinein"
        app:srcCompat="@drawable/truck" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintRight_toRightOf="@+id/res_name"
        app:srcCompat="@android:drawable/ic_dialog_info" />


</android.support.constraint.ConstraintLayout>